{
	"private": true,
	"name": "get-a-jab",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"build": "preact build --no-prerender",
		"serve": "sirv build --port 8080 --cors --single",
		"dev": "preact watch",
		"lint": "yarn run lint:js && yarn run lint:css",
		"lint:scss": "stylelint 'webapp-pwa/src/**/*.scss' --syntax scss",
		"lint:scss:fix": "stylelint 'webapp-pwa/src/**/*.scss' --syntax scss --fix",
		"lint:js": "eslint . --ext .ts,.tsx",
		"lint:js:fix": "yarn run lint:js --fix",
		"format": "prettier --write 'webapp-pwa/src/**/*.{ts,tsx,js,css,html}' **/*",
		"format:test": "prettier --check '**/*.{ts,tsx,js,css,html}' **/*",
		"test": "jest ./tests"
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": [
			"preact",
			"plugin:@typescript-eslint/recommended"
		],
		"ignorePatterns": [
			"build/"
		]
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint . --ext .ts,.tsx",
			"yarn run format"
		],
		"*.css": [
			"stylelint --syntax scss --fix"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"dependencies": {
		"leaflet": "^1.7.1",
		"preact": "^10.3.1",
		"preact-render-to-string": "^5.1.4",
		"preact-router": "^3.2.1"
	},
	"devDependencies": {
		"@types/enzyme": "^3.10.5",
		"@types/jest": "^26.0.8",
		"@typescript-eslint/eslint-plugin": "^2.25.0",
		"@typescript-eslint/parser": "^2.25.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-preact-pure": "^2.2.0",
		"eslint": "^7.27.0",
		"eslint-config-airbnb": "17.1.1",
		"eslint-config-airbnb-base": "14.0.0",
		"eslint-config-preact": "^1.1.4",
		"eslint-config-prettier": "6.7.0",
		"eslint-import-resolver-webpack": "0.12.1",
		"eslint-plugin-import": "2.20.1",
		"eslint-plugin-jsx-a11y": "6.2.3",
		"eslint-plugin-prettier": "3.1.2",
		"eslint-plugin-react": "7.19.0",
		"eslint-plugin-react-hooks": "2.5.0",
		"fs": "^0.0.1-security",
		"husky": "4.3.8",
		"jest": "^26.2.2",
		"jest-preset-preact": "^4.0.2",
		"lint-staged": "^11.0.0",
		"path": "^0.12.7",
		"preact-cli": "^3.0.0",
		"prettier": "1.19.1",
		"prettier-eslint": "^12.0.0",
		"sirv-cli": "^1.0.0-next.3",
		"stylelint": "^13.13.1",
		"stylelint-config-standard": "^22.0.0",
		"typescript": "^3.7.5"
	},
	"jest": {
		"preset": "jest-preset-preact",
		"setupFiles": [
			"<rootDir>/tests/__mocks__/browserMocks.ts",
			"<rootDir>/tests/__mocks__/setupTests.ts"
		]
	}
}
